<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:id="@+id/nav_layout"
    android:background="@android:color/white"
    android:layout_width="300.0dip"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150.0dip"
        android:src="@drawable/header"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name" />

    <ScrollView
        android:layout_marginStart="8dp"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_liked_quotes"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:tint="@color/grey"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_favorite_red" />

                <TextView
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Liked Quotes"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_todays_quote"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:contentDescription="@string/app_name"
                    android:tint="@color/grey"
                    android:src="@drawable/ic_menu_quote" />

                <TextView android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Quote of the day"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <View android:background="#ffeeeeee"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />

            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:id="@+id/ll_sounds"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:tint="@color/grey"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_favorite_red" />

                <TextView
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_sounds"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Setting"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_faqs"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:tint="@color/grey"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_menu_about" />

                <TextView
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="About Us" android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_contact_us"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:tint="@color/grey"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_menu_email" />

                <TextView
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Contact Us"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_rate_app"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:tint="@color/grey"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_menu_star" />

                <TextView
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Give Star"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_share_app"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:tint="@color/grey"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/ic_menu_share"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Share App"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_like_fb"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/ic_menu_facebook" />

                <TextView android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Like on Facebook"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_follow_insta"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_menu_instagram" />

                <TextView
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Follow on Instagram"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_privacy_policy"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2.0dip"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:tint="@color/grey"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/ic_menu_flag"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="Privacy Policy"
                    android:layout_weight="1.0" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/lightBlack"
        android:gravity="center"
        android:id="@+id/tvAppVersion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:text="@string/app_name" />

</LinearLayout>